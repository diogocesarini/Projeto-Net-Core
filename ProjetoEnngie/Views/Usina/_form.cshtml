@model ProjetoEnngie.Models.UsinaVM

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <label>Nome Usina*</label>
            @Html.HiddenFor(model => model.Id)
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @maxlength = 50, @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-lg-3">
        <div class="form-group">
            <label>Fornecedor</label>
            @Html.DropDownListFor(model => model.FornecedorId, Model.Fornecedores, "Selecione", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-3">
        <div id="ckAtivo" class="form-group">
            <label>Ativo*</label>
            @Html.CheckBoxFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-control", @maxlength = 50, @autocomplete = "off", @checked = "checked" } })
            @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row text-right">
    <div class="col-lg-12">
        <a href="@Url.Action("Index","Usina")" class="btn btn-secondary" title="Voltar">Voltar</a> &nbsp;&nbsp;
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</div>