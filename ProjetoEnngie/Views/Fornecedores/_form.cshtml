@model ProjetoEnngie.Models.FornecedorVM

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div  class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <label>Fantasia*</label>
            @Html.HiddenFor(model => model.Id)
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @maxlength = 50, @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="row text-right">
    <div class="col-lg-12">
        <a href="@Url.Action("Index","Fornecedores")" class="btn btn-secondary" title="Voltar">Voltar</a> &nbsp;&nbsp;
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</div>